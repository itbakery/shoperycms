<%= form_for(@page, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @page.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h4>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group ">
      <%= f.label :parent, :class => "col-sm-2 control-label" %>
      <div class="col-sm-5">
        <%= f.collection_select  :parent_id, Page.tree_list, :id, :name, {prompt: true} , {class: "form-control"}  %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :content, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published_on, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :published_on, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :is_published, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :is_published, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :approved_by, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :approved_by, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
